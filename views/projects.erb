<h2>Projects</h2>

<div class="row">
  <div class="col-sm-4">
    <h3>All</h3>
    <% if @projects.any? %>
    <ul>
      <% @projects.each do |project| %>
      <li><a href="/projects/<%= project.id %>"><%= project.title %></a></li>
      <% end %>
    </ul>
    <% else %>
    <p>There are currently no records to display.</p>
    <% end %>
  </div>
  <div class="col-sm-4">
    <!-- <h3>Search</h3> -->
  </div>
  <div class="col-sm-4">
    <h3>Add a new project</h3>

    <form action="/projects" method="post">
      <div class="form-group">
        <label for="title">Project name:</label>
        <input id="title" name="project_title" class="form-control" type="text" required>
      </div>
      <button type="submit" class="btn btn-primary">Create Project</button>
    </form>


    <!-- <h3>Add</h3> -->
      <!-- <a class="btn btn-primary" href="/project/new">Add a new project</a> -->
  </div>
</div>
