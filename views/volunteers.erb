<h2>Volunteers</h2>

<div class="row">
  <div class="col-sm-8">
    <h3>All</h3>
    <% if @volunteers.any? %>
    <ul>
      <% @volunteers.each do |volunteer| %>
      <li><a href="projects/<%= volunteer.project.id %>/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a> assigned to
        <a href="projects/<%= volunteer.project.id %>"><%= volunteer.project.title %></a></li>
      <% end %>
    </ul>
    <% else %>
    <p>There are currently no records to display.</p>
    <% end %>
  </div>
  <div class="col-sm-4">
    <!-- <h3>Search</h3> -->

  </div>
</div>
