<h2>Volunteers</h2>
<div class="row">
  <div class="col-sm-12">
    <% if @volunteers.any? %>
    <h3>All</h3>
    <p class="heavy">Click a volunteer name to access them:</p>
    <ul>
      <% @volunteers.each do |volunteer| %>
      <li><a href="projects/<%= volunteer.project.id %>/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a> assigned to
        <a href="projects/<%= volunteer.project.id %>"><%= volunteer.project.title %></a></li>
      <% end %>
    </ul>
    <% else %>
    <h3>There are currently no records to display.</h3>
    <% end %>
  </div>
</div>
