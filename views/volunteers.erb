<h2>Volunteers</h2>

<div class="row">
  <div class="col-md-4">
    <h3>All</h3>
    <% if @volunteers.any? %>
    <ul>
      <% @volunteers.each do |volunteer| %>
      <li><a href="/volunteers/<%= volunteer.id %>"><%= volunteer.title %></a></li>
      <% end %>
    </ul>
    <% else %>
    <p>There are currently no records to display.</p>
    <% end %>
  </div>
  <div class="col-md-4">
    <h3>Search</h3>
  </div>
  <div class="col-md-4">
    <h3>Add</h3>
      <a class="btn btn-primary" href="/volunteer/new">Add a new volunteer</a>
  </div>
</div>
