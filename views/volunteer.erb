<h2>Volunteer: <%= @volunteer.name %></h2>
<div class="row">
  <div class="col-sm-4">
    <h3>Assigned to: </h3>
    <ul>
      <li><a href="/projects/<%= @volunteer.project.id %>"><%= @volunteer.project.title %></a></li>
    </ul>
  </div>
  <div class="col-sm-4">
    <h3>Edit</h3>
    <form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
      <div class="form-group">
        <input name="_method" type="hidden" value="patch">
        <label for="name">Rename volunteer</label>
        <input id="name" name="name" type="text" required>
      </div>
      <button type="submit" class="btn-lg btn-warning">Update Volunteer</button>
    </form>
  </div>
  <div class="col-sm-4">
    <h3>Delete</h3>
    <form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit" class="btn-lg btn-danger">Delete volunteer</button>
    </form>
  </div>
</div>
